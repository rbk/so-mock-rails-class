<h2>Please Login</h2>
<%= form_tag signin_path do %>
	<div class="field">
		<%= label_tag :name, "Name" %>
		<%= text_field_tag :name, params[:name] %>
	</div>
	<div class="field">
		<%= label_tag :password, "Password" %>
		<%= password_field_tag :password %>
	</div>
	<div class="field">
		<%= label_tag :na, "" %>	
		<%= submit_tag "Login" %>
	</div>
<% end %>