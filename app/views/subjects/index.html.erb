<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Subject name</th>
      <th>Answer count</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.name, subject %></td>
        <td><%= subject.questions.count %></td>
        <% if current_user %>
          <td><%= link_to 'Show', subject %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <div class="button"><%= link_to 'New Subject', new_subject_path %></div>
<% end %>
